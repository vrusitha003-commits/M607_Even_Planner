<%- include('../partials/header') %> <h2>Admin Dashboard</h2>
<div class="row">
    <div class="col-md-4">
        <h4>Create New Event</h4>
        <form action="/admin/create" method="POST">
            <div class="mb-2"><input type="text" name="title" class="form-control" placeholder="Event Title" required></div>
            <div class="mb-2"><textarea name="description" class="form-control" placeholder="Description"></textarea></div>
            <div class="mb-2"><input type="date" name="date" class="form-control"></div>
            <div class="mb-2"><input type="text" name="locationName" class="form-control" placeholder="Address Name"></div>
            <div class="row">
                <div class="col"><input type="number" step="any" name="lat" class="form-control" placeholder="Latitude" required></div>
                <div class="col"><input type="number" step="any" name="lng" class="form-control" placeholder="Longitude" required></div>
            </div>
            <div class="mb-2 mt-2"><input type="number" name="price" class="form-control" placeholder="Price"></div>
            <button class="btn btn-primary">Add Event</button>
        </form>
    </div>
    <div class="col-md-8">
        <h4>Existing Events</h4>
        <ul class="list-group">
            <% events.forEach(event => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= event.title %>
                    <form action="/admin/<%= event._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</div>